.justify-text {
  text-align: justify !important;
}

:root {
  --bs-primary: #7C4DFF;

  --text-strong: #0d0e10;
  --text-muted: #4b5563;
  --link: #0d6efd;
}
.btn-primary {
  background-color: var(--bs-primary);
  border-color: var(--bs-primary);
}
.btn-primary:hover,
.btn-primary:focus {
  background-color: #651FFF; 
  border-color: #651FFF;
}

.cc-fab {
  position: fixed;
  right: 18px;
  bottom: 18px;
  display: flex;
  flex-direction: column;
  gap: 10px;
  z-index: 1050;
}
.cc-fab__btn {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: var(--bs-primary);
  color: #fff !important;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6px 16px rgba(0,0,0,0.2);
  transition: transform .15s ease, background-color .15s ease, box-shadow .15s ease;
}
.cc-fab__btn:hover,
.cc-fab__btn:focus {
  background: #651FFF;
  transform: translateY(-2px);
  box-shadow: 0 10px 20px rgba(0,0,0,0.25);
}
.cc-fab__btn i { font-size: 18px; }


.home-section#contact .leaflet-container,
#contact .leaflet-container,
.section-contact .leaflet-container,
#contact .js-map {
  height: 340px !important;
  min-height: 340px;
}

.cc-slider { position: relative; }
.cc-slider__track { display:flex; gap:12px; overflow-x:auto; padding:8px; scroll-snap-type:x mandatory; scrollbar-width:none; }
.cc-slider__track::-webkit-scrollbar { display:none; }
.cc-slider figure { min-width:80%; margin:0; position:relative; scroll-snap-align:start; border-radius:12px; overflow:hidden; }
.cc-slider img { width:100%; height:320px; object-fit:cover; display:block; }


.cc-slider figcaption{ text-align:center; }
.cc-slider figcaption > div:first-child{ 
  line-height: 1.15;
  font-weight: 800;
  letter-spacing: -0.01em;
  margin-bottom: 4px;
  text-shadow: 0 2px 8px rgba(0,0,0,.35);
}
.cc-slider figcaption > div:nth-child(2){ 
  font-size: clamp(14px, 2.2vw, 18px);
  line-height: 1.45;
  max-width: 88ch;
  margin: 0 auto;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  opacity: .95;
}


.article-container .article-tags,
.article-container .share-box,
.article-container .article-share,
.article-container .share,
.article-container .author-card,
.article-container .media.author-card,
.article-container footer.article-footer,
.article-container .article-footer { display: none !important; }

main .article-tags,
main .tags,
main .tag-cloud,
main .share-box,
main .article-share,
main .share,
main .share-buttons,
main .author-card,
main .media.author-card,
main footer.article-footer,
main .article-footer,
main .article-metadata .network-icon,
main .network-icon { display: none !important; }

main article .article-tags,
main article .tags,
main article .tag-cloud,
main article a.badge,
main article .badge,
main article .share-box,
main article .article-share,
main article .share,
main article .share-buttons,
main article .author-card,
main article .media.author-card,
main article footer.article-footer,
main article .article-footer,
main article .article-metadata .network-icon,
main article .network-icon { display: none !important; }

.article-container .network-icon,
.article-container .network-icon a,
.article-container .btn-icon,
.article-container .btn.btn-outline-primary,
.article-container .btn.btn-outline-primary.btn-sm,
.article-container .article-metadata .btn-icon,
.article-container .article-metadata .network-icon { display: none !important; }

body { color: var(--text-strong); }
.home-section { color: var(--text-strong); }

.home-section#about { color: var(--text-strong); }
.home-section#about h1,
.home-section#about h2,
.home-section#about h3,
.home-section#about .lead { color: var(--text-strong); }

@media (prefers-color-scheme: dark) {
  :root {
    --text-strong: #f1f3f5;
    --text-muted: #c8cbd0;
    --link: #8ab4f8;
  }
}

html.dark,
body.dark,
[data-theme="dark"],
.dark [data-wc-theme="dark"],
[data-wc-theme="dark"],
.dark {
  --text-strong: #f1f3f5;
  --text-muted: #c8cbd0;
  --link: #8ab4f8;
}

.home-section h1,
.home-section h2,
.home-section h3,
.home-section .lead,
.home-section p,
.home-section li { color: var(--text-strong); }

.home-section#about .article-style,
.home-section#about .article-style p,
.home-section#about .article-style li,
.home-section#about .article-style small,
.home-section#about .article-style .text-muted { color: var(--text-strong) !important; }
.home-section#about .article-style .text-muted { color: var(--text-muted) !important; }
.home-section#about .article-style a { color: var(--link) !important; }

#about .portrait-title h2, #about .portrait-title h3 { color: var(--text-strong) !important; }
#about :where(h1,h2,h3,h4,h5,h6,p,li,small,span,strong,em) { color: var(--text-strong) !important; }
#about .text-muted { color: var(--text-muted) !important; opacity: 1 !important; }
#about a:not(.btn):not(.badge):not(.nav-link) { color: var(--link) !important; }
#about .network-icon a { color: var(--link) !important; }
#about .bio, #about .bio p, #about .bio li, #about .bio small { color: var(--text-strong) !important; }